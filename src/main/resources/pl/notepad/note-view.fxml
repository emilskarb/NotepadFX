<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx" fx:controller="pl.notepad.controllers.NoteController">

  <left>
    <VBox minWidth="280" spacing="10" BorderPane.alignment="CENTER">
      <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
      <ListView fx:id="notesListView" VBox.vgrow="ALWAYS" />

      <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="addNote" onAction="#addNewNote" styleClass="btn, btn-warning" text="Dodaj nową notatkę" />
        <Button fx:id="deleteButton" onAction="#deleteNote" styleClass="btn, btn-danger" text="Usuń" />
      </HBox>
    </VBox>
  </left>

  <center>
    <VBox spacing="10">
      <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
         <TextField fx:id="noteTitle" VBox.vgrow="ALWAYS"/>
      <TextArea fx:id="noteTextArea" VBox.vgrow="ALWAYS" />

      <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="saveButton" minWidth="80" onAction="#saveNote" styleClass="btn, btn-success" text="Zapisz" />
      </HBox>
    </VBox>
  </center>

</BorderPane>
